{
  "include": ["./src"],
  "exclude": ["src/tests"],
  "compilerOptions": {
    "target": "ES2020",
    "types": ["vitest"],
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true
  }
}
